// room script file

function room_LeaveLeft()
{
  player.ChangeRoom(2);
  player.x = 250;
  player.y = 175;
  roomNumber = 2;
  roomBefore = 4;
}

function oTrunk_UseInv()
{
  if (player.ActiveInventory == iBranch) {
      player.Walk(262,  189,  eBlock);
      aWind.Play();
      GiveScore(10);
      player.LoseInventory(iBranch);
      Display("Ein warmer, seichter Wind weht von den Bergen Richtung Wald.");
      cTreeface.ChangeRoom(3);
      dialogFacetree = true;
      cTwinBlue.x = 340;
      cTwinPink.x = 340;
  }
}

function room_Load()
{
  if (talkedToTree == true) {
    oRotblum.Visible = true;
    oBlaupilz.Visible = true;
    oGruenwurz.Visible = true;
  }
  
  // Zufällig Reihenfolge für Plantea-Tee-Rätsel auswählen (3! = 6 Cases)
  teaOrder = 0;
  int random = Random(5);
  switch (random)
  {
    case 0:
      orderBlaupilz = 1;
      orderGruenwurz = 2;
      orderRotblum = 3;
      break;
    case 1:
      orderBlaupilz = 1;
      orderGruenwurz = 3;
      orderRotblum = 2;
      break;
    case 2:
      orderBlaupilz = 2;
      orderGruenwurz = 1;
      orderRotblum = 3;
      break;
    case 3:
      orderBlaupilz = 2;
      orderGruenwurz = 3;
      orderRotblum = 1;
      break;
    case 4:
      orderBlaupilz = 3;
      orderGruenwurz = 1;
      orderRotblum = 2;
      break;
    case 5:
      orderBlaupilz = 3;
      orderGruenwurz = 2;
      orderRotblum = 1;
      break;
  }
  
}


function oBlaupilz_AnyClick()
{
  aPickingUpFlowers.Play();
  player.AddInventory(iBlaupilz);
  oBlaupilz.Visible = false;
  teaOrderCheck = orderBlaupilz;
  teaOrder++;
  if (teaOrderCheck == teaOrder) {
    teaQuizPass = true;  
  } else {
    teaQuizPass = false;
  }
}

