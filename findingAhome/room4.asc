function room_RepExec()
{
  if (teaOrder == 3) {
    if (teaQuizPass == true) {
      player.LoseInventory(iBlaupilz);
      player.LoseInventory(iGruenwurz);
      player.LoseInventory(iRotblum);
      player.AddInventory(iPlantea);
      aSuccess.Play();
      GiveScore(15);
    } else {
      player.LoseInventory(iBlaupilz);
      player.LoseInventory(iGruenwurz);
      player.LoseInventory(iRotblum);
      oBlaupilz.Visible = true;
      oGruenwurz.Visible = true;
      oRotblum.Visible = true;
      aFail.Play();
      int randomX = Random(5);
      switch (randomX)
      {
        case 0:
          oBlaupilz.X = 243;
          oGruenwurz.X = 196;
          oRotblum.X = 152;
          break;
        case 1:
          oBlaupilz.X = 243;
          oGruenwurz.X = 152;
          oRotblum.X = 196;
          break;
        case 2:
          oBlaupilz.X = 196;
          oGruenwurz.X = 243;
          oRotblum.X = 152;
          break;
        case 3:
          oBlaupilz.X = 196;
          oGruenwurz.X = 152;
          oRotblum.X = 243;
          break;
        case 4:
          oBlaupilz.X = 152;
          oGruenwurz.X = 243;
          oRotblum.X = 196;
          break;
        case 5:
          oBlaupilz.X = 152;
          oGruenwurz.X = 196;
          oRotblum.X = 243;
          break;
      }
    }
    teaOrder = 0;
  }
}
